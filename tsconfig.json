{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",                               
    "module": "ESNext",                             
    "declaration": true,           
    "moduleResolution": "Node16",                   
    "outDir": "./dist/esm",                            
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["**/*test.ts", "**/tests/**/*"]
}